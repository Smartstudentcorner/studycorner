{
  "name": "node-ts-bootstrap",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn server/index.ts",
    "build": "tsc && npm run copy-html",
    "copy-html": "copyfiles -u 1 server/views/*.html dist/views",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "copyfiles": "^2.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}